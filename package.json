{
  "name": "socket-party",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun --filter '*' build",
    "dev": "bun run sst dev",
    "deploy:staging": "bun run sst deploy --stage staging",
    "deploy:prod": "bun run sst deploy --stage prod",
    "remove:dev": "bun run sst remove",
    "remove:staging": "bun run sst remove --stage staging",
    "remove:prod": "bun run sst remove --stage prod",
    "e2e": "bun run playwright test"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/aws-lambda": "8.10.159",
    "@types/bun": "latest",
    "playwright": "^1.57.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "sst": "3.17.24",
    "xstate": "^5.25.0",
    "zod": "^4.2.1"
  }
}
